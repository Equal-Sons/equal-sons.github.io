---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderThree from '../components/layout/headers/header.tsx';
import BreadcrumbOne from '../components-react/breadcrumb/breadcrumb-one.tsx';
import FaqTechServices from '../components-react/faq/faq-tech-services.tsx';
import FaqSpeakingServices from '../components-react/faq/faq-speaking-services.tsx';
import MarqueeSlider from '../components-react/marquee-slider.tsx';
import FooterSeven from '../components/layout/footer/footer-seven.tsx';
import BackToTop from '../components/back-to-top.tsx';

const title = "Services - Equal Sons";
const description = "Our technology and consulting services";
const keywords = "services, technology consulting, software development";
---

<BaseLayout title={title} description={description} keywords={keywords}>
	<!-- Header -->
	<HeaderThree client:load />

	<!-- Breadcrumb -->
	<BreadcrumbOne title="Services" bg="/assets/img/bg/breadcumb-bg1-2.jpg" client:load />

	<!-- Tech Services FAQ -->
	<FaqTechServices client:only="react" />

	<!-- Speaking Services FAQ -->
	<FaqSpeakingServices client:only="react" />

	<!-- Marquee Slider -->
	<MarqueeSlider client:only="react" />

	<!-- Footer -->
	<FooterSeven />

	<!-- Back to Top -->
	<BackToTop client:load />
</BaseLayout>
